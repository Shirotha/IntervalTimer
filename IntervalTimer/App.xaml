<Application x:Class="IntervalTimer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:Shirotha.IntervalTimer.Converters"
             Startup="Application_Startup">
    <Application.Resources>
        <conv:ScaleConverter x:Key="ScaleConverter" />
        <conv:ScaleConverter x:Key="InverseScaleConverter" Invert="True" />
        <conv:ColorToBrushConverter x:Key="ColorToBrushConverter" />
        <conv:TimeSpanToStringConverter x:Key="TimeSpanToStringConverter" />
        <conv:TimeSpanToSecondsConverter x:Key="TimeSpanToSecondsConverter" />
    </Application.Resources>
</Application>
